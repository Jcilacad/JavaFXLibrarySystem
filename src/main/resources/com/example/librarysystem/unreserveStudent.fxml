<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<DialogPane fx:controller="com.example.librarysystem.UnreserveStudentController" xmlns:fx="https://javafx.com/fxml">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="ID Number: " GridPane.rowIndex="0" GridPane.columnIndex="0">
                <font>
                    <Font name="Arial bold" size="15"/>
                </font>
            </Label>
            <TextField fx:id="idNumberField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Title: " GridPane.rowIndex="1" GridPane.columnIndex="0">
                <font>
                    <Font name="Arial bold" size="15"/>
                </font>
            </Label>
            <TextField fx:id="titleField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Author: " GridPane.rowIndex="2" GridPane.columnIndex="0">
                <font>
                    <Font name="Arial bold" size="15"/>
                </font>
            </Label>
            <TextField fx:id="authorField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Quantity: " GridPane.rowIndex="3" GridPane.columnIndex="0">
                <font>
                    <Font name="Arial bold" size="15"/>
                </font>
            </Label>
            <TextField fx:id="quantityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>